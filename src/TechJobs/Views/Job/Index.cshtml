@model TechJobs.Models.Job
@{
    // TODO #2.1- declare the ViewModel (outside of this @{ } block)
}

<table class="job-listing">
    @{
        // TODO #2.2 - display the job fields, one per row (outside of this @{ } block)
    }


    <tbody>
        @if (Model != null)
        {
            <tr>
                <th>
                    Name
                </th>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <th>
                    @TechJobs.Models.JobFieldType.Employer
                </th>
                <td>
                    @Model.Employer
                </td>
            </tr>
            <tr>
                <th>
                    @TechJobs.Models.JobFieldType.Location
                </th>
                <td>
                    @Model.Location
                </td>
            </tr>
            <tr>
                <th>
                    Skill
                </th>
                <td>
                    @Model.CoreCompetency
                </td>
            </tr>
            <tr>
                <th>
                    Position Type
                </th>
                <td>
                    @Model.PositionType
                </td>
            </tr>
        }
    </tbody>

</table>



